{
    "openapi": "3.0.0",
    "info": {
        "title": "Garden API",
        "version": "1.0.0",
        "description": "This is a sample API for testing purposes."
    },
    "paths": {
        "/nonce": {
            "get": {
                "summary": "Fetches a unique nonce for user authentication",
                "responses": {
                    "200": {
                        "description": "A unique nonce",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "string",
                                    "example": "1234567890abcdef"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/auth": {
            "post": {
                "summary": "Authenticates the user by verifying the signature of the nonce",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "signature": {
                                        "type": "string",
                                        "example": "0xabcdef1234567890"
                                    },
                                    "message": {
                                        "type": "string",
                                        "example": "1234567890abcdef"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Authentication token",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "string",
                                    "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9..."
                                }
                            }
                        }
                    }
                }
            }
        },
        "/quote": {
            "get": {
                "summary": "Retrieves price details for a specific trading pair",
                "parameters": [
                    {
                        "name": "inputToken",
                        "in": "query",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "example": "BTC"
                        }
                    },
                    {
                        "name": "outputToken",
                        "in": "query",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "example": "ETH"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Price information",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "inputTokenPrice": {
                                            "type": "number",
                                            "example": 50000
                                        },
                                        "outputTokenPrice": {
                                            "type": "number",
                                            "example": 2000
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/attested-quote": {
            "get": {
                "summary": "Provides a signed quote, preparing it for order creation",
                "parameters": [
                    {
                        "name": "strategyId",
                        "in": "query",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "example": "strategy-123"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Signed quote object",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "quote": {
                                            "type": "string",
                                            "example": "signed-quote-abcdef"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/create-order": {
            "post": {
                "summary": "Executes the swap on-chain using the signed quote",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "quote": {
                                        "type": "string",
                                        "example": "signed-quote-abcdef"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Order ID",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "string",
                                    "example": "order-123456"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/get-order": {
            "get": {
                "summary": "Fetches details and status of a previously created order",
                "parameters": [
                    {
                        "name": "orderId",
                        "in": "query",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "example": "order-123456"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Order details",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "status": {
                                            "type": "string",
                                            "example": "completed"
                                        },
                                        "inputToken": {
                                            "type": "string",
                                            "example": "BTC"
                                        },
                                        "outputToken": {
                                            "type": "string",
                                            "example": "ETH"
                                        },
                                        "amount": {
                                            "type": "number",
                                            "example": 0.5
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}